{
  "exclude": ["node_modules/", "public"],
  "include": ["**/*"],
  "compilerOptions": {
    "target": "es2018",
    "lib": ["dom", "es2015", "es2016", "es2017.object", "es2018"],
    "outDir": "build/",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowUnreachableCode": false
  }
}
